
<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="beaches">
        <%= form_tag beaches_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Ache uma praia"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div id="beaches">
        <% @beaches.each do |beach| %>
          <h4><%= beach.name %></h4>
          <p>Descrição: <%= beach.overview %></p>
          <p>Avaliação geral: <%= beach.overall_rating %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
