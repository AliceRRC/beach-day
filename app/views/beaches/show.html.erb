  <div id="reviews" class="container inactive-tab">
    <div id="overview" class="d-flex justify-content-center pb-4">
      <h3 class="h3-overview w-100"><%= @beach.overview %></h3>
    </div>
    <% if !@beach.reviews.empty? %>
      <% @beach.reviews.each do |review| %>
      <div id="card-review">
        <p class="p-card"><strong><%= review.title %></strong></p>
        <p><%= review.content %></p>
      </div>
      <% end %>
    <% else  %>
      <p><strong>>Essa praia ainda possui avaliações</p>
    <% end %>
    <%= link_to "Adicionar avaliação", new_beach_review_path(@beach), class: "btn btn-primary btn-blue align-middle h-75 button"%>
  </div>


    <div id="realtime" class="container inactive-tab">
    <div id="cleaning" class="text-center p-1">
      <% if @real_time.cleaning %>
        <div class="alert-success"> PRAIA LIMPA E VERIFICADA PELO ÓRGÃO AMBIENTAL OFICIAL DO RIO DE JANEIRO</div>
      <% else %>
        <div class="alert-danger">ATENÇÃO: ESSA PRAIA NÃO ESTÁ RECOMENDADA PARA BANHO DE ACORDO COM O ÓRGÃO AMBIENTAL OFICIAL!</div>
      <% end %>
    </div>
    <div id="real_time_values" class="d-flex justify-content-around">
      <div>
        <h3 class="h3-weather"><%= @portuguese[0] %>, <%= @real_time.date_time.strftime("%d/%m/%Y")%> <%= @real_time.date_time.hour.to_s.rjust(2, '0')%>h</h3>
        <%= image_tag "weather_icons/#{@dailies[3].icon}.png", class: "image-medium" %>
        <h4><%= @real_time.description.capitalize%></h4>
      </div>
      <div class="d-flex">
        <div id="water">
          <h3>ÁGUA</h3>
          <p class="p-0 m-0">Ondas: <%= (@real_time.wave_height) %>m (<%= @real_time.wave_direction %>)</p>
          <% if @real_time.wave_formation.to_i < 10 %>
            <p class="p-0 m-0">Formação das ondas: "Ondas mal formadas" %></p>
          <% else %>
            <p class="p-0 m-0">Formação das ondas: "Ondas bem formadas" %></p>
          <% end %>
          <p class="p-0 m-0">Temperatura da água: <%= (@real_time.water_temperature).round(1) %>%</p>
        </div>
        <div id="weather">
          <h3>TEMPO</h3>
          <p class="p-0 m-0">Temperatura do ar: <%= (@real_time.air_temperature.round(1)) %>°C</p>
          <p class="p-0 m-0">Sensação Térmica: <%= (@real_time.air_temperature_feels_like.round(1)) %>°C</p>
          <p class="p-0 m-0">Vento: <%= (@real_time.wind_speed).to_i %>km/h (<%=@real_time.wind_direction %>)</p>
          <p class="p-0 m-0">Humidade: <%= (@real_time.humidity).to_i %>%</p>
          <p class="p-0 m-0">Pressão: <%= (@real_time.pressure).to_i %>%</p>
        </div>
      </div>
    </div>
    <div id="tides">
      <h2 class="text-center mt-4">MARÉS</h2>
      <%= area_chart @tide, discrete: true %>
    </div>
    <div id="other_informations">
    </div>
  </div>

